<h1>Add a Blog Post</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title: </label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="author">Author: </label>
        {{input value=author id="author" placeholder=post.author}}
      </div>

      <div class="form-group">
        <label for="body">Blog Body: </label>
        {{textarea rows="10" cols="100" value=body id="body" placeholder=post.body}}
      </div>

      <div class="form-group">
        <label for="image">Image URL: </label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <button {{action 'save1'}} class="btn btn-success">Save</button>
    </form>
  </div>
